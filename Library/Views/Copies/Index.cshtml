@{
  Layout = "_Layout";
}

@using Library.Models;
@model List<Library.Models.Copy>;


@if(@Model.Count == 0)
{
  <p>There are no book copies to display.</p>
}
else
{
  <h4>Copies you have checked out:</h4>
  <ul>
    @foreach(Copy copy in Model)
    {
      <li>@copy.Book.Title, Checkout date: @copy.CheckoutDate, Due date: @copy.DueDate</li>
      @using (Html.BeginForm("Return", "Copies", new {CopyId = copy.CopyId}))
      {
        <button class="btn btn-info" type="submit">Return Book</button>
      }
    }
  </ul>
}