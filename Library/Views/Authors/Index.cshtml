@{
  Layout = "_Layout";
}

@using Library.Models
@model List<Library.Models.Author>

<h2>Authors</h2>
<hr/>

@if(Model.Count == 0)
{
  <h2>This library does not have any Authors!</h2>
}
else 
{
  @foreach(Author author in Model)
  {
    <li>@Html.ActionLink($"{author.Name}", "Details", new {id = author.AuthorId})</li>
  }
}

<button>@Html.ActionLink("Add An Author", "Create", "Authors")</button>