@{
  Layout = "_Layout";
}

@using Library.Models
@model List<Library.Models.Book>

<h2>Book Titles</h2>
<hr/>

@if(Model.Count == 0)
{
  <h2>This library is currently out of books.</h2>
  @Html.ActionLink("Would you like to add one?", "Create")
}
else 
{
  @foreach(Book book in Model)
  {
    <li>@Html.ActionLink($"{book.Title}", "Details", new {id = book.BookId})</li>
  }
}